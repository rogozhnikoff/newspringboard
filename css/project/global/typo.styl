// Titles
h1, h2, h3, h4, h5, h6 {
  font-family: Bold;
  font-size: 18px;
  color: textColor;
  line-height 1.3;

  small {
    font-size: 75%;
    color: lightGray;
  }
}

h1 {
  font-size: 40px;
  margin: 27px 0 18px;
}

h2 {
  font-size: 30px;
  margin: 21px 0 14px;
}

h3 {
  font-size: 25px;
  margin: 15px 0;
}

h4 {
  font-size: 20px;
  margin: 5px 0 6px;
}

h5 {
  font-size: 15px;
  margin: 8px 0 5px;
}

h6 {
  font-size: 12px;
  margin: 5px 0 3px;
  font-weight: normal;
  color: lightGray;
}

.h-regular {
  font-family: Regular
}

.h-semi {
  font-family: Semibold
}

.h-light {
  font-family: Light
}

  
// links
a {
  href();

  &:hover,
  &:active {
    outline: 0;
  }

  &:focus {
    outline: thin dotted;
  }
}


// images
img {
  max-width: 100%;
  height: auto;
  border: 0;
  -ms-interpolation-mode: bicubic;
}

// inline text elements
i,
em {
  font-style: italic;
  font-weight: inherit;
}

b,
strong {
  font-style: inherit;
  font-weight: bold;
}

big {
  font-size: 120%;
}

small {
  font-size: 85%;
}

sub,
sup {
  font-size: 75%;
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}

sup {
  top: -5px;
}

sub {
  bottom: -25px;
}

// lists
ul {
  list-style: none;
  list-style-image: none;
}

// tables
th {
  font-weight: bold;
  vertical-align: middle;
}

td {
  vertical-align: top;
}

blockquote {
  border-left: 5px solid #e1e1e1;
  padding: 0 0 0 8px;
  margin: 13px 0 26px;

  font: italic 13px/1.2 Regular;
  color: gray;

  p {
    margin: 0 0 1px;
  }
}

// content
article {
  margin: 10px 0 35px;
  font-size: basefont + 1;

  h1, h2, h3, h4, h5, h6 {
    margin-top: 0;
    margin-bottom: 16px;
    line-height: 1.6;
  }

  p {
    font: normal 15px Regular;
    margin: 4px 0 26px;
    line-height: 1.9;
  }

  ul,
  ol {
    position: relative;
    top: -5px;
    padding: 0 0 0 25px;
    margin: 0 0 floor(x-baseline / 2) 0;
  }

  ul ul,
  ul ol,
  ol ol,
  ol ul {
    margin-bottom: 0;
  }

  ul {
    list-style: none;
  }

  ol {
    list-style: decimal;
  }

  li {
    position: relative;
    margin: 0 0 10px;
    font: 15px Regular;
    line-height: 1.6;
  }

  hr {
    margin: x-baseline 0;
    border: 0;
    border-top: 1px solid darken(gray, 20);
    border-bottom: 1px solid lighten(gray, 20);
  }
}
  


// for debug
pre {
  background-color: lighten(gray, 75);
  display: block;
  padding: 7px;
  margin: 0 0 x-baseline;
  line-height: 1.4;
  font-family: Lucida Console, Courier New, Courier, monospaced;
  font-size: basefont - 1;
  border: 1px solid rgba(0, 0, 0, .15);
  white-space: pre;
  white-space: pre-wrap;
  word-wrap: break-word;
  border-radius: 4px;

  code {
    padding: 0;
    background-color: transparent;
    border: 0;
    color: unquote('inherit');
  }
}